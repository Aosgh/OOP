        "class Vehicle:\n",
        "  def __init__(self, n, m, c): \n",
        "    self.name = n\n",
        "    self.mileage = m\n",
        "    self.capacity = c\n",
        "\n",
        "  def fare(self):\n",
        "    return self.capacity*100\n",
        "\n",
        "class Bus(Vehicle):\n",
        "  def busFare(self):\n",
        "    return 1.1*self.fare()\n",
        "  def display(self):\n",
        "    print(f\"Name: {self.name} \\n Mileage: {self.mileage} \\n Capacity: {self.capacity}\")\n",
        "\n",
        "bus1 = Bus(\"BMW\", 7, 52)\n",
        "bus1.display()\n"
